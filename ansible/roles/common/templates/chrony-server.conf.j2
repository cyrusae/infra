# /etc/chrony/chrony.conf
# Generated by Ansible -- do not edit by hand.
# Babbage: syncs to internet pools AND serves time to local network.

# Internet NTP pools
pool 2.ubuntu.pool.ntp.org iburst maxsources 4

# Allow nodes on the local network to query this server
allow 192.168.4.0/24

# Standard chrony settings
driftfile /var/lib/chrony/chrony.drift
logdir /var/log/chrony
maxupdateskew 100.0
rtcsync
makestep 1 3
